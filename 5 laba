            #region n 10
            {
                int[,] Sa = new int[5, 5]
            {
                {1, 2, 3, 4, 5},
                {5,7,8,9,10 },
                {0,-1,2,4,6 },
                {3,6,2,1,7 },
                {4,7,8,9,10 }
            };
                int maximus = Sa[0, 0];
                int indexj = 0;
                int indexjj = 0;
                int minimus = 1000;
                for (int i = 0; i < Sa.GetLength(0); i++)
                {
                    for (int j = 0; j < Sa.GetLength(1); j++)
                    {
                        if (i >= j)
                        {
                            if (Sa[i, j] < minimus)
                            {
                                maximus = Sa[i, j];
                                indexj = j;
                            }
                        }
                        if (i < j)
                        {
                            if (Sa[i, j] > maximus)
                            {
                                minimus = Sa[i, j];
                                indexjj = j;
                            }
                        }
                    }
                }
                int[,] Sl = matrix(Sa, indexj, indexjj);
                for (int i = 0; i < Sl.GetLength(0); i++)
                {
                    for (int j = 0; j < Sl.GetLength(1); j++)
                    {
                        Console.Write(Sl[i, j] + "\t");
                    }
                    Console.WriteLine();
                }
                Console.WriteLine();
            }
