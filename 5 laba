            #region n 2
            {
                double[,] mmm = new double[5, 5]
                {
                { 3,  6, -2,  6, 12 },
                { -1, 5, 11, -9,  8 },
                { 6,  3, -1,  2,  8 },
                { 11,-10, 5,  2,  7 },
                { 2,  8, -9,  1,  4 }
                };
                for (int i = 0; i < mmm.GetLength(0); i++)
                {
                    if (i % 2 == 0)
                    {
                        Return(up, mmm, i);
                    }
                    else Return(down, mmm, i);
                }
                for (int i = 0; i < mmm.GetLength(0); i++)
