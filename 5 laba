                else if (c1 <= 0)
                {
                    Console.WriteLine("Eror");
                    return;
                }
                if (ger(a, b, c) > ger(a1, b1, c))
                    Console.WriteLine(ger(a, b, c));
                else
                    Console.WriteLine(ger(a1, b1, c1));

            }
            #endregion
