            #region level 2
            #region n 6
            {
                int[] a11 = new int[7] { 7, 2, 3, 4, 5, 6, 13 };
                int[] a2 = new int[8] { 11, 9, 8, 7, 6, 5, 4, 3 };
                int[] a12 = array(a11);
                int[] a13 = array(a2);
                int[] a3 = new int[a12.Length + a13.Length];
                for (int i = 0; i < a12.Length; i++)
                {
                    a3[i] = a12[i];
                }
                for (int i = 0; i < a13.Length; i++)
                {
                    a3[i + a12.Length] = a13[i];
                }
                foreach (var keks in a3)
                    Console.Write($"  {keks}  ");
                Console.WriteLine();
                Console.WriteLine("=========");
            }
